<% manifest_url = lending_manifests_url(directory: @lending_item.directory) %>
<% canvas_id = UCBLIT::Util::URIs.append(manifest_url, '/canvas/p1').to_s %>
<%=
  # TODO: do all this by hand in a $(document).ready()
  mirador_tag(
    id: 'iiif_viewer',
    width: '100%',
    height: '100%',
    position: 'relative',
    display: 'block',
    instance_name: 'miradorInstance',
    options: {
      mainMenuSettings: { show: false },
      data: [
        { manifestUri: manifest_url, location: 'UC Berkeley Library' }
      ],
      windowObjects: [
        {
          loadedManifest: manifest_url,
          canvasID: canvas_id,
          viewType: 'ImageView',
          availableViews: ['ImageView'],
          annotationLayer: false,
          displayLayout: false,
          sidePanel: false,
        }
      ]
    }
  ) %>
<script>
  $(function() { addMiradorMetadataHandler() })
</script>
