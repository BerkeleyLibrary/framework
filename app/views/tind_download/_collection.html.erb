<li>
  <% button_id = collection.name.parameterize %>
  <%= form.radio_button(:collection, collection.name, id: button_id) %>
  <%= form.label(button_id, "#{collection.name} (#{collection.nb_rec} records)") %>
  <% unless collection.children.empty? %>
  <ul>
    <% collection.children.each do |child| %>
      <%= render(partial: 'collection', locals: { form: form, collection: child }) %>
    <% end %>
  </ul>
  <% end %>
</li>
